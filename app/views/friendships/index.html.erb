<div class="container friends">
  <div class="row header">
    <div class="col-md-6">
      <h3>Your friends (<%= @friends.count %>)</h3>
    </div>
    <div class="col-md-6 btn-add-new">
      <%= link_to new_friendship_path, class: "" do %>
        <i class="fa fa-plus-circle fa-lg" aria-hidden="true"></i> Add more friends
      <% end %>
    </div>
  </div>
  <div class="row body">
    <div class="list-group">
      <%= render partial: "friend", collection: @friends %>
    </div>
  </div>
</div>
