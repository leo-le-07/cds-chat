<div class="container conversation">
  <div class="row header">
    <h1>New message</h1>
  </div>
  <div class="row body">
    <%= form_tag "/conversation_emails", method: "post" do %>
      <fieldset class="form-group">
        <%= label_tag "email", "Email" %>
        <%= text_field_tag "email", params[:email], class: "form-control", placeholder: "Your friend's email ..." %>
      </fieldset>
      <fieldset class="form-group">
        <%= label_tag "content", "Content" %>
        <%= text_field_tag "content", params[:content], class: "form-control", placeholder: "Message content ..." %>
      </fieldset>
      <fieldset class="form-group">
        <%= submit_tag "Send", class: "btn btn-primary" %>
      </fieldset>
    <% end %>
  </div>
</div>
